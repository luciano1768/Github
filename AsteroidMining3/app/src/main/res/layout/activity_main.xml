<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spaceapps.asteroidmining.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="IP Address"
            android:id="@+id/lblIp"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/edtIp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="2" />


        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Port"
            android:id="@+id/lblPort"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/edtPort"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Commands List"
            android:id="@+id/lblCommands"
            android:layout_row="2"
            android:layout_column="0" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/spinCommands"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Manual Command"
            android:id="@+id/lblManualCommand"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edtManualCommand"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wifi"
            android:id="@+id/btnExecute"
            android:layout_row="7"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth"
            android:id="@+id/btnBluetooth"
            android:layout_row="8"
            android:layout_column="0" />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Car"
            android:id="@+id/btnCar"
            android:layout_row="11"
            android:layout_column="1" />

        <Button
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Crane"
            android:id="@+id/btnCrane"
            android:layout_row="11"
            android:layout_column="2" />

    </GridLayout>
</RelativeLayout>
